<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_marginTop="50dp"
        android:id="@+id/phoneStatusIV"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_navigation_24"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_below="@+id/phoneStatusIV"
        android:layout_marginTop="50dp"
        android:id="@+id/textDeletetv"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Rotation"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_below="@+id/textDeletetv"
        android:layout_marginTop="50dp"
        android:id="@+id/compassIV"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/compass_card"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_below="@+id/compassIV"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compass"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>